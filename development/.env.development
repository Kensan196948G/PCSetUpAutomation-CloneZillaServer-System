# 開発環境用環境変数設定ファイル
# このファイルは開発環境でのみ使用されます
# 本番環境では .env.production を使用してください

# Flask設定
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_PORT=5000
SECRET_KEY=dev-secret-key-change-in-production

# データベース設定
DATABASE_URL=sqlite:////mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/development/data/test-db/pcsetup.db
DATABASE_ECHO=1

# API設定
API_PREFIX=/api
API_VERSION=v1
API_TIMEOUT=30

# CORS設定（開発環境用）
CORS_ENABLED=1
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ログ設定
LOG_LEVEL=DEBUG
LOG_FILE=/mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/development/logs/flask-dev.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ODJファイル設定
ODJ_DIR=/mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/development/data/test-odj
ODJ_FILE_EXTENSION=.txt

# Clonezillaイメージ設定
CLONEZILLA_IMAGE_DIR=/mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/development/data/test-images

# PC命名規則設定
PC_NAME_FORMAT=YYYYMMDDM
PC_NAME_SUFFIX=M

# セキュリティ設定（開発環境では緩い設定）
ENABLE_CSRF=0
ENABLE_SSL=0
SESSION_COOKIE_SECURE=0

# テスト設定
TESTING=1
TEST_DATABASE_URL=sqlite:///:memory:

# メール設定（開発環境ではコンソール出力）
MAIL_ENABLED=0
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=0
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@dev.local

# Windows Update設定
WINDOWS_UPDATE_ENABLED=1
WINDOWS_UPDATE_CATEGORIES=Critical,Security

# 同時展開台数制限（開発環境）
MAX_CONCURRENT_DEPLOYMENTS=5

# リトライ設定
API_RETRY_COUNT=3
API_RETRY_DELAY=5

# タイムアウト設定
HTTP_TIMEOUT=30
DEPLOYMENT_TIMEOUT=5400

# デバッグモード
DEBUG_SQL=1
DEBUG_API=1
