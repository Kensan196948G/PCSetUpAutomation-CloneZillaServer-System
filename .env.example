FLASK_APP=flask-app/app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# SQLite (開発用)
DATABASE_URL=sqlite:///pc_setup.db

# PostgreSQL (本番用)
# DATABASE_URL=postgresql://username:password@localhost:5432/pc_setup_db

# API Configuration
API_HOST=0.0.0.0
