# 本番環境用環境変数設定ファイル
# このファイルには本番環境の機密情報が含まれます
# セキュリティ上、このファイルはGit管理から除外してください

# Flask設定
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_PORT=8000
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-IN-PRODUCTION

# データベース設定
DATABASE_URL=sqlite:////mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/production/data/db/pcsetup.db
DATABASE_ECHO=0

# PostgreSQL設定（オプション）
# DATABASE_URL=postgresql://username:password@localhost:5432/pcsetup

# API設定
API_PREFIX=/api
API_VERSION=v1
API_TIMEOUT=30

# CORS設定（本番環境用）
CORS_ENABLED=0
CORS_ORIGINS=

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/production/logs/flask/app.log
LOG_MAX_BYTES=52428800
LOG_BACKUP_COUNT=10

# ODJファイル設定
ODJ_DIR=/mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/production/data/odj
ODJ_FILE_EXTENSION=.txt

# Clonezillaイメージ設定
CLONEZILLA_IMAGE_PATH=/mnt/Linux-ExHDD/Ubuntu-ExHDD
CLONEZILLA_IMAGE_DIR=/home/partimag

# PC命名規則設定
PC_NAME_FORMAT=YYYYMMDDM
PC_NAME_SUFFIX=M

# セキュリティ設定（本番環境では厳格な設定）
ENABLE_CSRF=1
ENABLE_SSL=1
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_HTTPONLY=1
SESSION_COOKIE_SAMESITE=Lax

# テスト設定
TESTING=0

# メール設定（本番環境）
MAIL_ENABLED=1
MAIL_SERVER=smtp.company.local
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=pcsetup@company.local
MAIL_PASSWORD=CHANGE-THIS-PASSWORD
MAIL_DEFAULT_SENDER=pcsetup@company.local

# 通知先メールアドレス
ADMIN_EMAIL=admin@company.local
ERROR_EMAIL=it-support@company.local

# Windows Update設定
WINDOWS_UPDATE_ENABLED=1
WINDOWS_UPDATE_CATEGORIES=Critical,Security,UpdateRollups

# 同時展開台数制限（本番環境）
MAX_CONCURRENT_DEPLOYMENTS=20

# リトライ設定
API_RETRY_COUNT=3
API_RETRY_DELAY=5

# タイムアウト設定
HTTP_TIMEOUT=30
DEPLOYMENT_TIMEOUT=5400

# デバッグモード（本番環境では無効）
DEBUG_SQL=0
DEBUG_API=0

# パフォーマンス設定
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=30

# バックアップ設定
BACKUP_ENABLED=1
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/mnt/Linux-ExHDD/PCSetUpAutomation-CloneZillaServer-Project/production/backups

# 監視設定
MONITORING_ENABLED=1
HEALTH_CHECK_INTERVAL=60

# Active Directory設定
AD_DOMAIN=company.local
AD_DC_SERVER=dc01.company.local
AD_OU_PATH=OU=Computers,DC=company,DC=local

# ネットワーク設定
DRBL_SERVER_IP=192.168.1.100
TFTP_SERVER_IP=192.168.1.100
DHCP_RANGE_START=192.168.1.200
DHCP_RANGE_END=192.168.1.250
